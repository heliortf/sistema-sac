{% extends "layout/sistema.html.twig" %}
{% block titulo %}Ver Pedido{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Visualizar Pedido</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Visualizar Pedido</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row ver-pedido">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="row">
                            <div class="col-md-3">
                                <h3 class="box-title"><i class="fa fa-ticket"></i> Pedido #{{ pedido.getId() }}</h3>
                            </div>                                                        
                            <div class="col-sm-6 pull-right text-right">
                                <form method="post" action="{{ urlFor('excluir_pedido') }}">
                                    <input type="hidden" name="id" value="{{ pedido.getId() }}" />
                                    <button type="submit" name="btn_excluir" class="btn btn-danger">Excluir</button>
                                    <a href="{{ urlFor('editar_pedido', { id : pedido.getId() }) }}">
                                        <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                    </a>
                                    <a href="{{ urlFor('lista_pedidos') }}">
                                        <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                    </a>
                                </form>                                
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form form-horizontal">                            
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">T&iacute;tulo:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ pedido.getTitulo() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="endereco" class="col-sm-2 control-label">Cliente:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ pedido.getCliente().getNome() }}</p>
                                </div>                                
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-sm-5 pull-right text-right">
                                <form method="post" action="{{ urlFor('excluir_pedido') }}">
                                    <input type="hidden" name="id" value="{{ pedido.getId() }}" />
                                    <button type="submit" name="btn_excluir" class="btn btn-danger">Excluir</button>
                                    <a href="{{ urlFor('editar_pedido', { id : pedido.getId() }) }}">
                                        <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                    </a>
                                    <a href="{{ urlFor('lista_pedidos') }}">
                                        <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col-md-12 -->            
        </div><!-- /.ver-pedido -->
    </div>
{% endblock %}

{% block scripts %}{% endblock %}