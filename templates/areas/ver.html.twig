{% extends "layout/sistema.html.twig" %}
{% block titulo %}Ver &Aacute;rea{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Visualizar &Aacute;rea</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Visualizar &Aacute;rea</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row ver-area">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="row">
                            <div class="col-md-3">
                                <h3 class="box-title"><i class="fa fa-ticket"></i> &Aacute;rea #{{ area.getId() }}</h3>
                            </div>                                                        
                            <div class="col-sm-5 pull-right text-right">
                                <a href="{{ urlFor('editar_area', { id : area.getId() }) }}">
                                    <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                </a>
                                <a href="{{ urlFor('lista_areas') }}">
                                    <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form form-horizontal">                            
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Nome:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ area.getNome() }}</p>
                                </div>                                
                            </div>	
                            <div class="row">
                                
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="row">
                        <div class="col-md-12">
                            <div role="tabpanel">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" role="tablist">                                    
                                    <li role="presentation" class="active"><a href="#usuarios" aria-controls="dashboard-empresa" role="tab" data-toggle="tab"><i class="fa fa-users"></i> Usu&aacute;rios</a></li>                                                                        
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="usuarios">
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <table class="table table-bordered">
                                                    <thead>
                                                        <tr>                                                            
                                                            <th>Nome</th>
                                                            <th>Cargo</th>
                                                            <th>&Aacute;rea</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {% for u in usuarios %}
                                                        <tr>
                                                            <td>{{ u.getNome() }}</td>
                                                            <td>{{ u.getCargo().getLabel() }}</td>
                                                            <td>{{ u.getArea().getNome() }}</td>                                                            
                                                        </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-sm-5 pull-right text-right">
                                <a href="{{ urlFor('editar_area', { id : area.getId() }) }}">
                                    <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                </a>
                                <a href="{{ urlFor('lista_areas') }}">
                                    <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col-md-12 -->            
        </div><!-- /.ver-area -->
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="js/area/ver_area.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            var VA = new Ver&Aacute;rea({{ area.getId() }});
            VA.render();
        });
    </script>
{% endblock %}