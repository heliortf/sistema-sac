{% extends "layout/sistema.html.twig" %}
{% block titulo %}Ver Empresa{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Visualizar Empresa</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Visualizar Empresa</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row ver-empresa">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="row">
                            <div class="col-md-3">
                                <h3 class="box-title"><i class="fa fa-ticket"></i> Empresa #{{ empresa.getId() }}</h3>
                            </div>                                                        
                            <div class="col-sm-5 pull-right text-right">
                                <a href="{{ urlFor('editar_empresa', { id : empresa.getId() }) }}">
                                    <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                </a>
                                <a href="{{ urlFor('lista_empresas') }}">
                                    <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form form-horizontal">                            
                            <div class="form-group logotipo">
                                <label for="nome" class="col-sm-2 control-label">Logotipo:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static"><img src="files/{{ empresa.getLogo() }}" class="img-responsive" /></p>
                                </div>
                            </div>							
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Nome Fantasia:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ empresa.getNomeFantasia() }}</p>
                                </div>
                            </div>							
                            <div class="form-group">
                                <label for="area" class="col-sm-2 control-label">Raz&atilde;o Social:</label>
                                <div class="col-sm-5">                                    
                                    <p class="form-control-static">{{ empresa.getRazaoSocial() }}</p>                                    
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="area" class="col-sm-2 control-label">CNPJ:</label>
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ empresa.getCnpj() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Endere&ccedil;o:</label>
                                <div class="col-sm-3">
                                    <p class="form-control-static">{{ empresa.getEndereco() }}</p>
                                </div>
                                <label for="nome" class="col-sm-1 control-label">Bairro:</label>
                                <div class="col-sm-2">
                                    <p class="form-control-static">{{ empresa.getBairro() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Cidade:</label>
                                <div class="col-sm-3">
                                    <p class="form-control-static">{{ empresa.getCidade() }}</p>
                                </div>
                                <label for="nome" class="col-sm-1 control-label">Estado:</label>
                                <div class="col-sm-3">
                                    <p class="form-control-static">{{ empresa.getEstado() }}</p>
                                </div>
                            </div>                            
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Telefone:</label>
                                <div class="col-sm-3">
                                    {% if empresa.getTelefone() != "" %}
                                        <p class="form-control-static">({{ empresa.getDddTelefone() }}) {{ empresa.getTelefone() }}</p>
                                    {% endif %}
                                </div>
                                <label for="nome" class="col-sm-1 control-label">Celular:</label>
                                <div class="col-sm-3">
                                    {% if empresa.getCelular() != "" %}
                                        <p class="form-control-static">({{ empresa.getDddCelular() }}) {{ empresa.getCelular() }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="cliente" class="col-sm-2 control-label">E-mail:</label>
                                <div class="col-sm-3">
                                    <p class="form-control-static">{{ empresa.getEmail() }}</p>
                                </div>
                            </div>                            
                        </div>
                    </div><!-- /.box-body -->
                    <div class="row">
                        <div class="col-md-12">
                            <div role="tabpanel">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" role="tablist">                                    
                                    <li role="presentation" class="active"><a href="#dashboard-empresa" aria-controls="dashboard-empresa" role="tab" data-toggle="tab"><i class="fa fa-dashboard"></i> Dashboard</a></li>                                    
                                    <li role="presentation"><a href="#solicitacoes-empresa" aria-controls="solicitacoes-empresa" role="tab" data-toggle="tab"><i class="fa fa-ticket"></i> Solicita&ccedil;&otilde;es</a></li>                                                                            
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="dashboard-empresa">
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="row quantitativos">
                                                    <div class="col-lg-3 col-xs-6">
                                                        <!-- small box -->
                                                        <div class="small-box bg-aqua">
                                                            <div class="inner">
                                                                <h3>{{ tipoUsuarios.atendente }}</h3>
                                                                <p>Atendentes</p>
                                                            </div>
                                                            <div class="icon">
                                                                <i class="ion ion-ios-people"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-xs-6">
                                                        <!-- small box -->
                                                        <div class="small-box bg-green">
                                                            <div class="inner">
                                                                <h3>{{ tipoUsuarios.responsavel_area }}</h3>
                                                                <p>Respons&aacute;veis</p>
                                                            </div>
                                                            <div class="icon">
                                                                <i class="ion ion-ios-people-outline"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-xs-6 quantitativo-area">
                                                        <!-- small box -->
                                                        <div class="small-box bg-yellow">
                                                            <div class="inner">
                                                                <h3>{{ qtdAreas }}</h3>
                                                                <p>&Aacute;reas</p>
                                                            </div>
                                                            <div class="icon">
                                                                <i class="fa fa-building"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-xs-6">
                                                        <!-- small box -->
                                                        <div class="small-box bg-red">
                                                            <div class="inner">
                                                                <h3>{{ tipoUsuarios.administrador }}</h3>
                                                                <p>Administrador</p>
                                                            </div>
                                                            <div class="icon">
                                                                <i class="ion ion-ios-person"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div role="tabpanel" class="tab-pane" id="solicitacoes-empresa">                                        
                                        <div class="row lista-atendimentos">
                                            <div class="col-md-10 col-md-offset-1">                                
                                                <table class="table tabela-atendimentos table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>N&uacute;mero</th>                                                            
                                                            <th>Respons&aacute;vel</th>                                                            
                                                            <th>T&iacute;tulo</th>
                                                            <th>Data</th>
                                                            <th>Status</th>
                                                            <th>&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {% for a in atendimentos %}
                                                            <tr>
                                                                <td>{{ a.getId() }}</td>                                                                
                                                                <td>{{ a.getAtendente().getNome() }}</td>                                                                
                                                                <td>{{ a.getTitulo() }}</td>
                                                                <td>{{ a.getDataCriacao().format("d/m/Y") }}</td>
                                                                <td>{{ a.getStatus().getNome() }}</td>
                                                                <td>
                                                                    <a href="{{ urlFor('ver_atendimento', { id : a.getId() }) }}">
                                                                        <button id="dLabel" type="button">
                                                                            <i class="fa fa-search"></i> Visualizar
                                                                        </button>                                        
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        {% else %}
                                                            <tr>
                                                                <td colspan="6">Nenhum atendimento</td>
                                                            </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="box-footer clearfix">
                                            <div class="row">
                                                <div class="col-md-4 informacoes-paginacao">
{#                                                    {% include "paginacao/informativo.html.twig" %}#}
                                                </div>
                                                <div class="col-md-8">
{#                                                    {% include "paginacao/paginacao.html.twig" %}#}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-sm-5 pull-right text-right">
                                <a href="{{ urlFor('editar_empresa', { id : empresa.getId() }) }}">
                                    <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                </a>
                                <a href="{{ urlFor('lista_empresas') }}">
                                    <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col-md-12 -->            
        </div><!-- /.ver-empresa -->
    </div>
{% endblock %}

{% block scripts %}

{% endblock %}