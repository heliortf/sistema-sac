{% extends "layout/sistema.html.twig" %}
{% block titulo %}Importar Clientes{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Importar Clientes</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Importar Clientes</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row importar-cliente">
            <div class="col-md-12">
                <form class="form form-horizontal" method="post" enctype="multipart/form-data" action="{{ urlFor('confirmar_importacao_clientes') }}">
                    <div class="box">
                        <div class="box-header with-border">                        
                            <div class="row">
                                <div class="col-md-3">
                                    <h3 class="box-title">Importa&ccedil;&atilde;o CSV</h3>
                                </div>            
                                <div class="col-sm-5 pull-right text-right">
                                    <button type="submit" name="btn_salvar" class="btn btn-primary">Enviar</button>
                                    <a href="{{ urlFor('lista_clientes') }}">
                                        <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                    </a>
                                </div>  
                            </div>
                        </div>
                        <div class="box-body">                        
                            <div class="alert alert-info nao-some">
                                <ul class="fa-ul">
                                    <li>
                                        <i class="fa fa-info-circle fa-lg fa-li"></i>
                                        O arquivo CSV enviado poder&aacute; ser configurado na pr&oacute;xima tela.
                                        Saiba mais sobre arquivos CSV <a href="https://pt.wikipedia.org/wiki/Comma-separated_values" target="_blank">clicando aqui</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="form-group">
                                <label for="arquivo" class="col-sm-2 control-label">Selecione o arquivo CSV:</label>
                                <div class="col-sm-4">
                                    <input type="file" name="files" id="fileupload" class="form-control-static" accept=".csv" />
                                </div>
                            </div>                        
                        </div><!-- /.box-body -->
                        <div class="box-footer clearfix">
                            <div class="row">
                                <div class="col-sm-5 pull-right text-right">
                                    <button type="submit" name="btn_salvar" class="btn btn-primary">Enviar</button>
                                    <a href="{{ urlFor('lista_clientes') }}">
                                        <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                    </a>
                                </div>  
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>   <!-- /.row -->
    </section><!-- /.content -->            
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("select[name=qtd_por_pagina]").on("change", function () {
                jQuery("form input[name='p[qtdPorPagina]']:hidden").val(jQuery(this).val());
                jQuery("form").submit();
            });
        });
    </script>
{% endblock %}