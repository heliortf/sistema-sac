{% extends "layout/sistema.html.twig" %}
{% block titulo %}Ver Cliente{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Visualizar Cliente</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Visualizar Cliente</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row ver-cliente">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="row">
                            <div class="col-md-3">
                                <h3 class="box-title"><i class="fa fa-ticket"></i> Cliente #{{ cliente.getId() }}</h3>
                            </div>                                                        
                            <div class="col-sm-5 pull-right text-right">
                                <a href="{{ urlFor('editar_cliente', { id : cliente.getId() }) }}">
                                    <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                </a>
                                <a href="{{ urlFor('lista_clientes') }}">
                                    <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form form-horizontal">                            
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Nome:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ cliente.getNome() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">E-mail:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ cliente.getEmail() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Senha:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ cliente.getSenha() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">CPF:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ cliente.getCpf() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">CNPJ:</label>                                
                                <div class="col-sm-5">
                                    <p class="form-control-static">{{ cliente.getCnpj() }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Telefone:</label>                                
                                <div class="col-sm-5">
                                    {% if cliente.getTelefone() != "" %}
                                        <p class="form-control-static">({{ cliente.getDddTelefone() }}) {{ cliente.getTelefone() }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Celular:</label>                                
                                <div class="col-sm-5">
                                    {% if cliente.getTelefone() != "" %}
                                        <p class="form-control-static">({{ cliente.getDddCelular() }}) {{ cliente.getCelular() }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Data Cria&ccedil;&atilde;o:</label>                                
                                <div class="col-sm-5">                                    
                                    <p class="form-control-static">{{ cliente.getDataCriacao().format("d/m/Y H:i") }}</p>                                    
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Data Altera&ccedil;&atilde;o:</label>                                
                                <div class="col-sm-5">                                    
                                    <p class="form-control-static">{{ cliente.getDataAlteracao().format("d/m/Y H:i") }}</p>                                    
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nome" class="col-sm-2 control-label">Data Acesso:</label>                                
                                <div class="col-sm-5">                                    
                                    <p class="form-control-static">{{ cliente.getDataAcesso().format("d/m/Y H:i") }}</p>                                    
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-sm-5 pull-right text-right">
                                <a href="{{ urlFor('editar_cliente', { id : cliente.getId() }) }}">
                                    <button type="button" name="btn_editar" class="btn btn-primary">Editar</button>
                                </a>
                                <a href="{{ urlFor('lista_clientes') }}">
                                    <button type="button" name="btn_voltar" class="btn btn-default">Voltar</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col-md-12 -->            
        </div><!-- /.ver-cliente -->
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="js/cliente/ver_cliente.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            var VA = new VerCliente({{ cliente.getId() }});
            VA.render();
        });
    </script>
{% endblock %}