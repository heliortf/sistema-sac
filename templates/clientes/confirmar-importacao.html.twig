{% extends "layout/sistema.html.twig" %}
{% block titulo %}Importar Clientes{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Importar Clientes</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Importar Clientes</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row importar-cliente">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">                        
                        <div class="row">
                            <div class="col-md-3">
                                <h3 class="box-title">Confirmar Importa&ccedil;&atilde;o</h3>
                            </div>                      
                            <div class="col-sm-6 pull-right text-right">
                                <button type="button" class="btn btn-primary">Importar</button>
                                <button type="button" class="btn btn-default">Voltar</button>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <form class="form form-horizontal" method="post" action="">
                            <span id="helpBlock" class="help-block">O CSV foi lido com sucesso. Escolha como os campos ser√£o importados</span><br/>
                            <div class="form-group">
                                <label class="col-sm-2">Nome:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">Campo CSV: nome</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">CPF:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">Campo CSV: cpf</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">CNPJ:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">Campo CSV: cnpj</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">Endere&ccedil;o:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">Campo CSV: Rua</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">Bairro:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">Campo CSV: bairro</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">Cidade:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">Campo CSV: cidade</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">Estado:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">Campo CSV: UF</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">CEP:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">-- Nenhum --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">E-mail:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">-- Nenhum --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">Login:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">-- Nenhum --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2">Senha:</label>
                                <div class="col-sm-3">
                                    <select name="nome" class="form-control">
                                        <option value="">-- Nenhum --</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <div class="row">
                            <div class="col-sm-6 pull-right text-right">
                                <button type="button" class="btn btn-primary">Importar</button>
                                <button type="button" class="btn btn-default">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>   <!-- /.row -->
    </section><!-- /.content -->            
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        $(document).ready(function(){
            $("select[name=qtd_por_pagina]").on("change", function(){
                jQuery("form input[name='p[qtdPorPagina]']:hidden").val(jQuery(this).val());
                jQuery("form").submit();
            });
        });
    </script>
{% endblock %}