{% extends "layout/sistema.html.twig" %}
{% block titulo %}Importar Clientes{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Importar Clientes</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Importar Clientes</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row importar-cliente">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">                        
                        <div class="row">
                            <div class="col-md-3">
                                <h3 class="box-title">Importa&ccedil;&atilde;o de clientes</h3>
                            </div>                                                  
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="col-md-10 col-md-offset-1">
                            <h3><i class="fa fa-check text-success"></i> Foram importados <b>{{ qtd }}</b> clientes!</h3>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <div class="row">
                            <div class="col-sm-6 pull-right text-right">                                
                                <a href="{{ urlFor('lista_clientes') }}">
                                    <button type="button" class="btn btn-default">Voltar</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>   <!-- /.row -->
    </section><!-- /.content -->            
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        $(document).ready(function(){
            $("select[name=qtd_por_pagina]").on("change", function(){
                jQuery("form input[name='p[qtdPorPagina]']:hidden").val(jQuery(this).val());
                jQuery("form").submit();
            });
        });
    </script>
{% endblock %}