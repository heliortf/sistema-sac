{% extends "layout/sistema.html.twig" %}
{% block titulo %}Relat&oacute;rios Gerenciais{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Relat&oacute;rios Gerenciais</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Ver Relat&oacute;rio</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row relatorios-gerenciais">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">                        
                        <div class="row">
                            <div class="col-md-6">
                                <h3 class="box-title">Relat&oacute;rio de Atendimentos Resolvidos</h3>
                            </div>                                                        
                        </div>
                    </div>
                    <div class="box-body">                        
                        <div class="row">
                            <div class="col-md-12 ver-relatorio">                                                                                             
                                <table class="table table-bordered" style="margin-top: 30px;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>T&iacute;tulo</th>
                                            <th>Cliente</th>
                                            <th>Tipo</th>
                                            <th>Status</th>                                                
                                            <th>&Aacute;rea</th>
                                            <th>Nome Funcion&aacute;rio</th>                                                                                                
                                            <th>Data Cria&ccedil;&atilde;o</th>
                                            <th>Data Conclus&atilde;o</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for atendimento in atendimentos %}
                                            <tr>
                                                <td>{{ atendimento.getId() }}</td>
                                                <td>{{ atendimento.getTitulo() }}</td>                                                    
                                                <td>{{ atendimento.getCliente().getNome() }}</td>
                                                <td>{{ atendimento.getTipo().getNome() }}</td>
                                                <td style="white-space: nowrap;">{{ atendimento.getStatus().getNome() }}</td>                                                    
                                                <td>{{ atendimento.getArea().getNome() }}</td>
                                                <td>{{ atendimento.getAtendente().getNome() }}</td>
                                                <td>{{ atendimento.getDataCriacao().format("d/m/Y") }}</td>
                                                <td>{{ atendimento.getDataConclusao().format("d/m/Y") }}</td>                                                    
                                            </tr>                                            
                                        {% else %}
                                            <tr>
                                                <td colspan="9">Nenhum resultado encontrado</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>                                
                            </div>
                        </div>
                    </div><!-- /.box-body -->                
                </div>
            </div>
        </div>   <!-- /.row -->
    </section><!-- /.content -->            
{% endblock %}