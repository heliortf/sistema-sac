{% extends "layout/sistema.html.twig" %}
{% block titulo %}Relat&oacute;rios Gerenciais{% endblock %}
{% block conteudo %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Relat&oacute;rios Gerenciais</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Ver Relat&oacute;rio</a></li>
        </ol>
    </section>        
    <!-- Main content -->
    <section class="content">
        <div class="row relatorios-gerenciais">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">                        
                        <div class="row">
                            <div class="col-md-6">
                                <h3 class="box-title">Relat&oacute;rio de Satisfa&ccedil;&atilde;o de Clientes</h3>
                            </div>                                                        
                        </div>
                    </div>
                    <div class="box-body">                        
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1 ver-relatorio">
                                <div class="row">                                                             
                                    <table class="table table-bordered" style="margin-top: 30px;">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Cliente</th>                                                
                                                <th>M&eacute;dia de Avalia&ccedil;&atilde;o (0 &agrave; 5)</th>
                                                <th>Data &Uacute;ltimo Atendimento</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for cliente in clientes %}
                                                <tr>
                                                    <td>{{ cliente.id }}</td>
                                                    <td>{{ cliente.nome }}</td>                                                
                                                    <td>{{ cliente.media_avaliacao|number_format(1) }}</td>
                                                    <td>{{ cliente.dataCriacao|date("d/m/Y H:i") }}</td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="4">Nenhum registro encontrado</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->                
                </div>
            </div>
        </div>   <!-- /.row -->
    </section><!-- /.content -->            
{% endblock %}